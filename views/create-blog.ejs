<div>
  <div>
    <h1 class="fs-2 fw-bold mb-2">Upload Blog</h1>
    <p class="text-muted fs-6 my-4">Share your thoughts with the world</p>
    <form id="form" method="POST" action="/api/user/create-blog" enctype="multipart/form-data">
      <div class="mb-3">
        <label class="form-label fw-semibold">Title</label>
        <input type="text" name="title" required class="form-control rounded-4 py-3 bg-light border-secondary-subtle" />
      </div>

      <div class="mb-3">
        <label class="form-label fw-semibold">Description</label>
        <textarea name="description" rows="10" required class="form-control bg-light rounded-4 border-secondary-subtle resize-none"></textarea>
      </div>

      <div class="mb-3">
        <label class="form-label fw-semibold">Category</label>
        <select name="category" required class="form-select bg-light border-secondary-subtle py-3 rounded-4">
          <% sectors.forEach(s => { %>
            <option value="<%= s.name %>"><%= s.name %></option>
          <% }) %>
        </select>
      </div>

      <div class="mb-3">
        <label class="form-label fw-semibold">Upload Image (File or Link)</label>
        <input id="imageFile" type="file" name="imageFile" accept="image/*" class="form-control bg-light border-secondary-subtle mb-2 py-3 rounded-4" />
        <small class="text-muted d-block mb-1 text-center">or</small>
        <input id="imageUrl" type="url" name="imageUrl" placeholder="https://example.com/image.jpg" class="form-control bg-light border-secondary-subtle py-3 rounded-4" />
      </div>

      <div class="form-check form-switch mb-3">
        <input class="form-check-input" type="checkbox" name="isPublic" id="isPublic" checked />
        <label class="form-check-label" for="isPublic">Public</label>
      </div>

      <div id="error-field" class="text-danger text-center fw-bold small mb-2" style="display: none;">*Image Filed Should not be empty*</div>

      <div class="w-100">
        <button type="submit" class="w-100 btn btn-dark fs-5 rounded-pill fw-bold submit-btn-padding">Submit Blog</button>
      </div>
    </form>

  </div>
</div>

<script>

  const errorField = document.getElementById("error-field");
  const form = document.getElementById("form");
  
  form.addEventListener("submit", function(e){
    const imageFile = document.getElementById("imageFile").value;
    const imageUrl = document.getElementById("imageUrl").value;
    if(!imageUrl && !imageFile){
      e.preventDefault();
      errorField.style.display = "block";
    }
  })
  
</script>